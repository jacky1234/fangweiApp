<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="QMUI.Compat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/tabbar_text_color</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="normal_register_row_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/lager_textsize</item>
        <item name="android:background">@null</item>
    </style>

    <!--标题style-->
    <style name="title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_textsize</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallButton">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:background">@drawable/shape_rect_gradient</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/action_confirm</item>
    </style>

    <!--大button-->
    <style name="confirm_button">
        <item name="android:layout_marginLeft">@dimen/normal_confirm_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_confirm_margin</item>
        <item name="android:background">@drawable/shape_rect_gradient</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/lager_textsize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="gap_line">
        <item name="android:divider">@drawable/shape_gray_divider</item>
        <item name="android:showDividers">beginning|end|middle</item>
        <item name="android:dividerPadding">1dp</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:divider">@drawable/shape_gray_divider</item>
    </style>

    <style name="button_code_style">
        <item name="android:background">@drawable/selected_enable_code</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dp</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">@dimen/lager_textsize</item>
        <item name="android:textColor">@color/item_title_text_color</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="home_item_bold_title_scrollable">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="transparentDisplay" parent="Theme.AppCompat.Light.NoActionBar">>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
