<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jacky.labeauty.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleView_left_drawable="@mipmap/ic_arrow_back_black"
        app:titleView_left_text="@string/back"
        app:titleView_left_text_color="@color/black"
        app:titleView_middle_text_color="@color/black"
        app:titleView_title_text="@string/branch_show" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/first_margin_from_left"
                android:paddingRight="@dimen/first_margin_from_left" />

            <TextView
                android:id="@+id/tvRegisterProtocol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="@dimen/first_margin_from_left"
                android:paddingRight="@dimen/first_margin_from_left" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>