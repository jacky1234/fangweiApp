<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#9E9E9E"
        android:textSize="@dimen/small_textsize"
        app:layout_constraintEnd_toEndOf="@+id/iv_picture"
        app:layout_constraintTop_toBottomOf="@+id/iv_picture"
        tools:text="123" />

    <ImageView
        android:id="@+id/iv_yellow_heart"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="4dp"
        android:src="@mipmap/ic_item_favorite"
        app:layout_constraintBottom_toBottomOf="@+id/tv_num"
        app:layout_constraintDimensionRatio="14:13"
        app:layout_constraintEnd_toStartOf="@+id/tv_num"
        app:layout_constraintTop_toTopOf="@+id/tv_num" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/iv_picture"
        app:layout_constraintTop_toTopOf="@+id/tv_num"
        tools:text="搭配图文1" />


</android.support.constraint.ConstraintLayout>