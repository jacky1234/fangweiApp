<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.jacky.labeauty.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleView_title_text="@string/my_discounts"
        app:titleView_visible_type="left_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_discount_detail"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:textColor="#333333"
            android:textSize="18sp"
            tools:text="可可脂官旗舰店" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_discount_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="100sp"
                android:textStyle="bold"
                android:typeface="monospace"
                tools:text="10" />

            <TextView
                android:id="@+id/tvDiscountCate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:background="@drawable/shape_white_circle"
                android:gravity="center"
                android:minWidth="26dp"
                android:minHeight="26dp"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="元" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/discount_card"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            tools:text="指定商品可用" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="56dp"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="33dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_round_white_5">

                <TextView
                    android:id="@+id/tvInstructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="15dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#8b8b8d"
                    android:textSize="11sp"
                    tools:text="1.打开淘宝使用店铺名搜索淘宝店铺并联系客服；\n2.将此图发给店铺客服索取优惠券；\n3.选择商品使用优惠券下单购买；\n4.此优惠券期限为2019.09.21，过期无效。" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/shape_circle_gradient"
                    android:gravity="center"
                    android:text="使"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/shape_circle_gradient"
                    android:gravity="center"
                    android:text="用"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/shape_circle_gradient"
                    android:gravity="center"
                    android:text="说"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/shape_circle_gradient"
                    android:gravity="center"
                    android:text="明"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>


</LinearLayout>