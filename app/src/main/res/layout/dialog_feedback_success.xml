<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="2dp">

    <TextView
        android:id="@+id/tv_wel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_top_corners"
        android:gravity="center"
        android:text="@string/dear_user"
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_bottom_white"
        android:gravity="center"
        android:text="您的每一条宝贵的建议我们都会认真对待"
        android:textColor="#8b8b8d"
        android:textSize="12sp" />
</LinearLayout>